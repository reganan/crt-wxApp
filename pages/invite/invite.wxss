page{
  background: #f3cc65;
  padding: 0 0 90rpx 0
}
.invite-tit{
  height: 169rpx;
}
.invite1,.invite2,.invite3{
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow: 0 0 30rpx 0 rgba(0,0,0,0.12);
}
.invite1-img{
  width: 580rpx;
  height: 500rpx;
  margin: 50rpx auto 45rpx;
}
.invite-btn{
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(to bottom, #e3b57b, #d2a061);
  padding: 0;
  border-radius: 8rpx;
}
.invite-title{
  line-height: 100rpx;
}
.invite-title-img{
  width: 91rpx;
  height: 49rpx;
  vertical-align: middle
}
.invite-title-text{
  margin: 0 30rpx;
}
.invite2-img{
  width: 154rpx;
  height: 160rpx;
  margin: 40rpx auto 30rpx;
}
.invite2-price{
  font-size: 60rpx;
}
.invite2-link{
  line-height: 75rpx;
}
.invite2-btn{
  margin: 30rpx auto 35rpx;
}
.invite3-img{
  width: 500rpx;
  height: 220rpx;
  margin: 50rpx auto;
  border-radius: 10rpx
}
.process{
  width: 82%;
  height: 16rpx;
  background: #eee;
  border-radius: 10rpx;
  margin: 25rpx auto 15rpx;
}
.process-con{
  background: linear-gradient(to right, #eed698, #f39800);
  height: 100%;
  border-radius: 10rpx 0 0 10rpx;
  max-width: 100%;
  position: relative;
}
.process-num{
  width: 68rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #f39800;
  border-radius: 50rpx;
  position: absolute;  
  top:-12rpx;
}
.process-box{
  vertical-align: middle
}
.process-font{
  display: inline-block;
  width: 9%;
  text-align: center;
  position: relative;
  top:-10rpx;
}
.invite3-btn{
  margin: 45rpx auto 55rpx;
}
.invite1-btn{
  margin: 40rpx 0 50rpx;
}
.disabled-btn{
  background: #c9c9c9;  
}
.invite3-con{
  position: relative;  
  overflow: hidden
}
.invite3-text{
  width:500rpx;
  background: rgba(243,204,101,0.95);
  line-height:40rpx;
  padding:10rpx 0;
}
.friendCircle,.fc-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 5
}
.fc-bg{
  background: #000;
  opacity: 0.8
}
.fc-con{
  position: relative;
  z-index: 6
}
.fc-cont{
  width: 560rpx;
  height: 800rpx;
  margin: 50rpx auto;
  display: block  
}
.fc-btn{
  position: relative;
  z-index: 10
}
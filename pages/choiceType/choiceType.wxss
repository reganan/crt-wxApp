page{
  padding: 0 0 130rpx 0
}
.item{
  margin: 20rpx 0 0 0;
  box-sizing: border-box;
  position: relative;
}
.item-tit{
  line-height: 88rpx;
  border-bottom:1rpx solid #e5e5e5;
  margin: 0 0 25rpx 0;
}
.item-data{
  line-height: 85rpx;
  border-top:1rpx solid #e5e5e5;
   margin:  25rpx 0 0 0;
}
.bot-btn{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx 4%;
  position: fixed;
  bottom: 0
}
.pro-d-btn{
  width: 100%;
  height: 86rpx;
  border: 1rpx solid #c18c4a;
  background: #dbab6f;
}
.cur{
  border: 1px solid #f8b551;  
}
.item-icon{
  width: 108rpx;
  height: 109rpx;
  position: absolute;
  right: 0;
  bottom:0;
  display: none;
}
.cur .item-icon{
  display: block
}